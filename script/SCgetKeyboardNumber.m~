
function k = AG1getKeyboardNumber
% Gets laptop internal keyboard for Ben's laptop, INERTIA

d=PsychHID('Devices');

usages = {d.usageName};
IDs = [d.productID];

k = 0;

usageIdx = find(strcmp(usages, 'Keyboard'));

if isempty(usageIdx)
    error('No keyboard recognized!')
elseif sum(abs(diff(usageIdx)))>0;
    error('Keyboards with different 
else
    k = usageIdx(1);
end
    

for n = 1:length(d)
    if (d(n).productID==560)&&(strcmp(d(n).usageName,'Keyboard'));  %560 for Recca % 538 for laptop kb, 566 for alan personal laptop, 516 for rm 410
        k=n;
        break
    end
end
